@model SchoolQuizzes.Web.ViewModels.Questions.CreateQuestionViewModel;

@{
    this.ViewData["Title"] = "Добавяне на въпрос";
    var categoriesItems = this.Model.CategoriesItems.Select(x => new SelectListItem(x.Value, x.Key));
}


<form method="post" class=" col-md-6 offset-md-3">
    <h1>@this.ViewData["Title"]</h1>
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class=" form-group">
        <label asp-for="QuestionValue"></label>
        <input asp-for="QuestionValue" class="form-control" />
        <span asp-validation-for="QuestionValue" class="text-danger"></span>
    </div>
    <div class=" form-group">
        <label asp-for="Description"></label>
        <input asp-for="Description" class="form-control" />
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class=" form-group">
        <label asp-for="CategoryId"></label>
        <select asp-for="CategoryId" asp-items="categoriesItems" class="form-control"></select>
        <span asp-validation-for="CategoryId" class="text-danger"></span>
    </div>
    <div class=" form-group">
        <label asp-for="DifficultId"></label>
        <input asp-for="DifficultId" class="form-control" />
        <span asp-validation-for="DifficultId" class="text-danger"></span>
    </div>
    <div id="AnswersContainer">
        <label asp-for="Answers"></label>
        <a class="btn btn-success" onclick="AddAnswer()">+</a>
    </div>
    <input type="submit" class="btn btn-primary" />
</form>
@section Scripts{
    <script>
        var answerIndex = 0;
       
        function AddAnswer() {
            $("#AnswersContainer").append("<div class='form-control'>Answer: <input type='text' name='Answers[" + answerIndex + "].AnswerValue' id='' />Correct: <input type='checkbox' name='Answers[" + answerIndex + "].IsTrue' /> </div>")
            answerIndex++;
        }
    </script>
}