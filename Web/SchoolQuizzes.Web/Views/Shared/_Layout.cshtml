<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@this.ViewData["Title"] - @GlobalConstants.SystemName</title>
    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" asp-append-version="true" />
    <link href="~/lib/fontawesome/css/all.css" rel="stylesheet" />
    <link href="~/css/site.min.css" rel="stylesheet" asp-append-version="true" />
    @await this.RenderSectionAsync("Styles", required: false)
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">@GlobalConstants.SystemName</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    <partial name="_LoginPartial" />
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                        @if (User.IsInRole(GlobalConstants.TeacherRoleName))
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle text-dark" asp-controller="" asp-action="" id="navbarDropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    Въпроси
                                </a>
                                <div class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
                                    <a class="dropdown-item" asp-area="" asp-controller="Questions" asp-action="Create">Създаване</a>
                                    <a class="dropdown-item" asp-area="" asp-controller="" asp-action="">-</a>
                                    <a class="dropdown-item" asp-area="" asp-controller="" asp-action="">*-</a>
                                </div>
                            </li>
                            <li class="nav-item dropdown">
                                <a class="nav-link text-dark" asp-area="" asp-controller="ClassRooms" asp-action="Index">Класни стаи</a>
                            </li>
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle text-dark" asp-controller="" asp-action="" id="navbarDropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    Тестове
                                </a>
                                <div class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
                                    <a class="dropdown-item" asp-area="" asp-controller="Quizzes" asp-action="Generate">Създаване</a>
                                    <a class="dropdown-item" asp-area="" asp-controller="Quizzes" asp-action="Index">Списък с тестове</a>
                                    <a class="dropdown-item" asp-area="" asp-controller="" asp-action="">Въпроси и отговори</a>
                                </div>
                            </li>
                        }
                        @if (User.IsInRole(GlobalConstants.StudentRoleName))
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link text-dark" asp-area="" asp-controller="StudentsClassRooms" asp-action="Index">Класни стаи</a>
                            </li>
                            <li class="nav-item dropdown">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Users" asp-action="IndexStudent">Моят ученически профил</a>
                            </li>
                        }

                        @if (User.IsInRole(GlobalConstants.StudentRoleName) || User.IsInRole(GlobalConstants.TeacherRoleName))
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle text-dark" asp-controller="" asp-action="" id="navbarDropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    Моите тестове
                                </a>
                                <div class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
                                    <a class="dropdown-item" asp-area="" asp-controller="TakesQuiz" asp-action="Index">Старт</a>
                                    <a class="dropdown-item" asp-area="" asp-controller="TakesQuiz" asp-action="MyTakes">Решени тестове</a>
                                </div>
                            </li>
                        }
                        @if (User.IsInRole(GlobalConstants.AdministratorRoleName))
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle text-dark" asp-controller="" asp-action="" id="navbarDropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    Admin
                                </a>
                                <div class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
                                    <a class="dropdown-item" asp-area="Administration" asp-controller="Categories" asp-action="Index">Старт</a>
                                    <a class="dropdown-item" asp-area="" asp-controller="TakesQuiz" asp-action="MyTakes">Решени тестове</a>
                                </div>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <partial name="_CookieConsentPartial" />
        <main role="main" class="pb-3">
            @this.RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; @DateTime.Now.Year - @GlobalConstants.SystemName - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js" asp-append-version="true"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js" asp-append-version="true"></script>
    <script src="~/lib/jquery-validation-unobtrusive/dist/jquery.validate.unobtrusive.js" asp-append-version="true"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.min.js" asp-append-version="true"></script>
    <script src="~/js/site.min.js" asp-append-version="true"></script>
    @await this.RenderSectionAsync("Scripts", required: false)
</body>
</html>
