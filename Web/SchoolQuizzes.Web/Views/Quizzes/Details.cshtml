@model SchoolQuizzes.Web.ViewModels.Quizzes.DetailsQuizViewModel;
@{
    this.ViewData["Title"] = "Детайли";
}
<h1>@Model.Title</h1>

<div class=" form-group">
    <label asp-for="CategoryName"></label>
    <span>@Model.CategoryName</span>
</div>
<div class=" form-group">
    <label asp-for="DifficultName"></label>
    <span>@Model.DifficultName</span>
</div>
<a class="btn btn-dark" asp-area="" asp-controller="Quizzes" asp-action="ExportQuizQuestions" asp-route-id="@Model.Id">Свали теста</a>
<h2>Въпроси в теста: </h2>
<div class="row justify-content-lg-start">
    @foreach (var question in Model.Questions)
    {

        <div class="media col-md-4">
            <div class="media-body">
                <h5 class="mt-0">@question.Value</h5>
                @foreach (var answer in question.Answers)
                {
                    <p class="lead m-3">@answer.Value</p>
                }
            </div>

        </div>

    }
</div>
