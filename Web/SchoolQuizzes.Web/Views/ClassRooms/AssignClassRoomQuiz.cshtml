
@model SchoolQuizzes.Web.ViewModels.ClassRooms.AssignClassRoomQuizViewModel;
@{
    this.ViewData["Title"] = "Възложи тест";
}
<h1>@this.ViewData["Title"]</h1>

<form class=" col-md-6 offset-md-3" asp-controller="ClassRooms" asp-action="AssignClassRoomQuiz" method="get">
    <div class=" form-group">
        <label asp-for="DifficultId"></label>
        <select asp-for="DifficultId" asp-items="@Model.Difficults" class="form-control"></select>
        <input type="hidden" asp-for="ClassRoomId" />
    </div>
    <input type="submit" class="btn btn-secondary" value="Приложи филтър" />
</form>
<form method="post" class=" col-md-6 offset-md-3">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class=" form-group">
        <label asp-for="Title"></label>
        <input asp-for="Title" class="form-control" />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>
    <div class=" form-group">
        <label asp-for="IsExam"></label>
        <input asp-for="IsExam" class="form-control" />
        <span asp-validation-for="IsExam" class="text-danger"></span>
    </div>
    <div class=" form-group">
        <label asp-for="QuizId"></label>
        <select asp-for="QuizId" asp-items="@Model.Quizzes" id="difficultId" class="form-control"></select>
        <span asp-validation-for="QuizId" class="text-danger"></span>
    </div>
    <input type="submit" class="btn btn-primary" value="Създай" />
</form>



